            <HBox alignment="CENTER_LEFT">
               <children>
                  <CheckBox fx:id="agreeCheck" mnemonicParsing="false" text="Accetto le responsabilità dell' eliminazione della carta e sono consapevole delle conseguenze" />
                  <VBox HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#deletePressed" style="-fx-background-color: primaryColor;" styleClass="tertiaryButton" text="Elimina" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
