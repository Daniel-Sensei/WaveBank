   <children>
      <Button fx:id="imageButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" styleClass="secondaryButton" />
      <Label fx:id="transactionLabel" text="Vivo Market" HBox.hgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="amountLabel" alignment="CENTER_RIGHT" text="-5,95 $">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></Label>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="15.0" right="15.0" />
   </padding>
</HBox>
