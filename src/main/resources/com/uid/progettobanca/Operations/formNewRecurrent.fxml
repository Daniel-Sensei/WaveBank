<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="1280.0" styleClass="background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uid.progettobanca.controller.OperationsController.NewRecurrentController">
    <padding>
        <Insets left="200.0" right="200.0" />
    </padding>
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="50.0" top="30.0" />
            </padding>
            <children>
                <AnchorPane>
                    <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="70.0">
                            <children>
                                <VBox alignment="CENTER_LEFT" spacing="3.0">
                                    <children>
                                        <Label styleClass="titleLabel" text="Bonifico SEPA" />
                                        <Label styleClass="subtitleLabel" text="Indietro">
                                            <graphic>
                                                <ImageView fx:id="back" fitHeight="12.0" fitWidth="12.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true" />
                                            </graphic>
                                            <cursor>
                                                <Cursor fx:constant="HAND" />
                                            </cursor>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="subtitleLabel" text="A chi lo stai inviando?" />
                        <VBox fillWidth="false" spacing="10.0">
                            <children>
                                <TextField fx:id="fieldName" prefHeight="50.0" prefWidth="350.0" promptText="Nome" />
                                <TextField fx:id="fieldSurname" prefHeight="50.0" prefWidth="350.0" promptText="Cognome" />
                                <TextField fx:id="fieldIbanTo" prefHeight="50.0" prefWidth="350.0" promptText="IBAN" />
                                <TextField fx:id="fieldAmount" prefHeight="50.0" prefWidth="350.0" promptText="0,00" />
                                <TextField fx:id="fieldDescr" prefHeight="50.0" prefWidth="350.0" promptText="Causale" />
                        <HBox prefHeight="50.0" prefWidth="710.0">
                           <children>
                              <ComboBox fx:id="recurrencyComboBox" onAction="#onAltroSelection" prefHeight="50.0" prefWidth="350.0" promptText="Ricorrenza">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                              </ComboBox>
                              <TextField fx:id="fieldNGiorni" editable="false" prefHeight="50.0" prefWidth="350.0" promptText="Inserire Numero Giorni" visible="false">
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <DatePicker fx:id="date" prefHeight="50.0" prefWidth="350.0" promptText="Prossimo Rinnovo">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </DatePicker>
                                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onSendButtonClick" prefHeight="40.0" prefWidth="100.0" styleClass="greenButton" text="Invia">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
