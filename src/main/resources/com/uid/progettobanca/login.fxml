            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/images/IconDark/users.png" />
                     </image>
                  </ImageView>
                  <TextField fx:id="emailField" prefHeight="35.0" promptText="Username" HBox.hgrow="ALWAYS" />
