<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="1280.0" styleClass="background" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uid.progettobanca.controller.MyAccountController.SafetyController">
   <padding>
      <Insets left="200.0" right="200.0" />
   </padding>
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="50.0" top="30.0" />
         </padding>
         <children>
            <AnchorPane>
               <children>
                  <HBox alignment="CENTER_RIGHT" prefHeight="70.0">
                     <children>
                        <VBox alignment="CENTER_LEFT" spacing="3.0">
                           <children>
                              <Label styleClass="titleLabel" text="Sicurezza" />
                              <Label onMouseClicked="#loadPreviousPage" styleClass="subtitleLabel" text="Indietro">
                                 <graphic>
                                    <ImageView fx:id="back" fitHeight="12.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true" />
                                 </graphic>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="subtitleLabel" text="Modifica password" />
                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="Vecchia Password" />
                              <HBox spacing="5.0">
                                 <children>
                                    <PasswordField fx:id="oldPsw" prefHeight="50.0" prefWidth="350.0" promptText="Vecchia password" />
                                    <Label fx:id="warningWrongPsw" style="-fx-text-fill: redColor;" text="Password errata*" visible="false" />
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="15.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="BOTTOM_LEFT">
                                 <children>
                                    <Label text="Nuova Password">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Label>
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <PasswordField fx:id="newPsw" prefHeight="50.0" prefWidth="350.0" promptText="Nuova password" />
                                 </children>
                              </HBox>
                              <HBox alignment="BOTTOM_LEFT">
                                 <children>
                                    <Label text="Conferma Nuova Password">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Label>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <PasswordField fx:id="confirmPsw" prefHeight="50.0" prefWidth="350.0" promptText="Conferma password" />
                                    <Label fx:id="warningDiffPsw" style="-fx-text-fill: redColor;" text="Password diverse*" visible="false" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </children>
                  </VBox>
                  <HBox HBox.hgrow="ALWAYS" />
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="subtitleLabel" text="Altro" />
                        <VBox alignment="CENTER_LEFT" fillWidth="false" spacing="5.0" styleClass="card">
                           <children>
                              <HBox onMouseClicked="#pswGuide" spacing="10.0">
                                 <children>
                                    <VBox prefWidth="350.0">
                                       <children>
                                          <Label styleClass="subtitleLabel" text="Consigli su come avere una password sicura" />
                                          <Label text="Leggili un pÃ²!" />
                                       </children>
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Button fx:id="sendButton" disable="true" mnemonicParsing="false" onAction="#sendButtonPressed" prefHeight="40.0" prefWidth="100.0" styleClass="greenButton" text="Invia">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
